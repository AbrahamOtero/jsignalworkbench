    private void refreshList(){
        File[] plugins=pluginManager.getInstaledPlugins();
        JarFile jarFile;
        String name;
        dlm.clear();
        if (plugins==null) {
            return;
        }
        for(int index=0;index<plugins.length;index++){
            try {
                jarFile=new JarFile(plugins[index]);
                name=jarFile.getManifest().getMainAttributes().getValue("PluginName");
                dlm.addElement(name);
                pluginJarAssociation.put(name,jarFile);
                jarFileFileAssociation.put(jarFile,plugins[index]);
                jarFile.close();
            } catch (IOException ex) {
                ex.printStackTrace();
            }
        }

    }
    private void listSelectionChange(){
        Object selected=jList1.getSelectedValue();
        if(selected==null){
            jLabel1.setText("Name: Not Selected");
            jLabel2.setText("Version: Not Selected");
            jLabel3.setText("BaseClass: Not Selected");
            jLabel4.setText("Short description: Not Selected");
            jLabel5.setText("Kind: Not Selected");
            jLabel6.setText("Stated: Not Selected");
        }else{
            String name=selected.toString();
            jLabel1.setText("Name: "+name);
            try {
                Attributes att=pluginJarAssociation.get(name).getManifest().getMainAttributes();
                jLabel2.setText("Version: "+att.getValue("PluginVersion"));
                jLabel3.setText("BaseClass: "+att.getValue("PluginBaseClass"));
                jLabel4.setText("Short description: "+att.getValue("PluginShortDescription"));
                jLabel5.setText("Kind: "+att.getValue("PluginType"));
                if(pluginManager.isPluginLoaded(att.getValue("PluginType"),name))
                    jLabel6.setText("State: Loaded");
                else
                    jLabel6.setText("State: Not Loaded");
            } catch (IOException ex) {
                ex.printStackTrace();
            }
        }
    }
