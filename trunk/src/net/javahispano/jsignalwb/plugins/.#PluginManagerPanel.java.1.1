    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        if(jfc==null){
            jfc=new JFileChooser(".");
        }
        jfc.setFileSelectionMode(JFileChooser.DIRECTORIES_ONLY);
        if(jfc.showOpenDialog(this)==JFileChooser.APPROVE_OPTION){
            File file=jfc.getSelectedFile();
            if(file.isDirectory()){
                pluginManager.searchPlugins(file.getAbsolutePath());
                JOptionPane.showMessageDialog(this,"Valid plugins from "+file.getAbsolutePath()+ " installed");
            }
        }
        refreshList();
    }//GEN-LAST:event_jButton2ActionPerformed

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton4ActionPerformed
        JarFile jarFile=pluginJarAssociation.get(dlm.getElementAt(jList1.getSelectedIndex()));
        File file=jarFileFileAssociation.get(jarFile);
        try {

            if(JOptionPane.showConfirmDialog(this,"Are you sure?","Uninstall plugin",JOptionPane.YES_NO_OPTION)==JOptionPane.YES_OPTION){
                boolean flag=false;
                if(pluginManager.unregisterPlugin(
                        jarFile.getManifest().getMainAttributes().getValue("PluginType"),
                        jarFile.getManifest().getMainAttributes().getValue("PluginName"))){

                    jarFile.close();
                    if(file.delete()){
                        refreshList();
                        return;
                    }
                }

                    JOptionPane.showMessageDialog(this,"Unable to delete plugin");
            }
        } catch (IOException ex) {
            ex.printStackTrace();
        }
    }//GEN-LAST:event_jButton4ActionPerformed

