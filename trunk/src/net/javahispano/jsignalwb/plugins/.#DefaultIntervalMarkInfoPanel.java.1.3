    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        if(signal!=null)
            if(JOptionPane.showConfirmDialog(jw.getParent(),"Are you sure?","Delete mark",JOptionPane.YES_NO_OPTION,JOptionPane.QUESTION_MESSAGE)==JOptionPane.YES_OPTION){
                signal.removeMark(dim);
                hideJWindow();
            }
    }//GEN-LAST:event_jButton2ActionPerformed

